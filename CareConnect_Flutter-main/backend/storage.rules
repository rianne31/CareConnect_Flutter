rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Patient documents - ADMIN ONLY
    match /patients/{patientId}/{allPaths=**} {
      allow read, write: if isAdmin();
    }
    
    // Auction item images - Public read, authenticated write
    match /auction_items/{itemId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // User uploads
    match /users/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId);
    }
    
    // Achievement badges (NFT images)
    match /badges/{badgeId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
